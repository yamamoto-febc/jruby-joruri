<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= @item.locale(:state) %></th>
    <td><%=h safe{@item.status.name} %></td>
  </tr><tr>
    <th><%= @item.locale(:concept_id) %></th>
    <td><%=h safe{@item.concept.name} %></td>
  </tr><tr>
    <th><%= @item.locale(:node_id) %></th>
    <td><%=h safe{@item.node.name} %></td>
  </tr>
  <% if @item.image_file? %>
  <tr>
    <th><%= @item.locale(:file) %></th>
    <td>
      <a href="<%= url_for(:id => @item, :action => :download, :_t => @item.updated_at.to_i) %>" target="_blank">
        <img src="<%= url_for(:id => @item.id, :action => :thumbnail, :_t => @item.updated_at.to_i) %>" /></a></td>
  </tr>
  <% end %>
  <tr>
    <th><%= @item.locale(:name) %></th>
    <td><%=h @item.name %></td>
  </tr><tr>
    <th><%= @item.locale(:title) %></th>
    <td><%=h @item.title %></td>
  </tr><tr>
    <th><%= @item.locale(:size) %></th>
    <td><%= @item.eng_unit %><br /><%= @item.image_size %></td>
</table>

<%= creator_view @item %>
