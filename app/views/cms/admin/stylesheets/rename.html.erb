<% form_for :item, :url => "?do=rename", :html => {:method => :put} do |f| %>
  
<%= f.error_messages %>

<table class="show">
  <%= concept_form(f) if @item.directory? %>
  <tr>
    <th><%= @item.locale :name %></th>
    <td><%= f.text_field :name, :class => "nameEn" %></td>
  </tr>
</table>

<%= submit :edit %>

<% end %>
