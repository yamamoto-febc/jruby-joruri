<table class="index">

  <tr>
    <th style="width: 60px; text-align: right;">記事番号</th>
    <th style="width: ;"><%= Article::Doc.new.locale(:title) %></th>
    <th style="width: 20%; text-align: center;">所属</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;"><%= Article::Doc.new.locale(:state) %></th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: right;"><%=h item.item_id %></td>
    <td><%=h safe{item.entity.title} %></td>
    <td><%=h safe{item.entity.creator.group.name} %></td>
    <td style="text-align: center;"><%= safe{item.entity.updated_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= safe{item.entity.status.name} %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
