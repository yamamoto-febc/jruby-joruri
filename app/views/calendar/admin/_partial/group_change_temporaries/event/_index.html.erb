<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">ID</th>
    <th style="width: 100px; text-align: center;"><%= Calendar::Event.new.locale(:event_date) %></th>
    <th style="width: ;"><%= Calendar::Event.new.locale(:title) %></th>
    <th style="width: 60px; text-align: center;"><%= Calendar::Event.new.locale(:state) %></th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: right;"><%=h item.item_id %></td>
    <td style="text-align: center;"><%=h safe{item.entity.event_date.strftime("%Y-%m-%d") } %></td>
    <td><%=h safe{item.entity.title} %></td>
    <td style="text-align: center;"><%= safe{item.entity.status.name} %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
